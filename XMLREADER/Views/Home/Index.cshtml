@using XMLReader.Models
<h1 style="text-align:center">Products List</h1>

<div>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                @if (ViewBag.PageViewModel.HasPreviousPage)
                {
                    <a asp-route-page="@(ViewBag.PageViewModel.PageNumber - 1)" asp-route-pageSize="@(ViewBag.PageViewModel.Pagesize)" class="page-link" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                }
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                @if (ViewBag.PageViewModel.HasNextPage)
                {
                    <a asp-route-page="@(ViewBag.PageViewModel.PageNumber + 1)" asp-route-pageSize="@(ViewBag.PageViewModel.Pagesize)" class="page-link"  aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                }
            </li>
        </ul>
    </nav>
    @if (ViewBag.PageViewModel.HasPreviousPage)
    {
        <a asp-route-page="@(ViewBag.PageViewModel.PageNumber - 1)" asp-route-pageSize="@(ViewBag.PageViewModel.Pagesize)" class="btn btn-success btn-outline-dark" style="margin-bottom: 5px;">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Previous
        </a>
    }
    @if (ViewBag.PageViewModel.HasNextPage)
    {
        <a  asp-route-page="@(ViewBag.PageViewModel.PageNumber + 1)" asp-route-pageSize="@(ViewBag.PageViewModel.Pagesize)" class="btn btn-success btn-outline-dark" style="margin-bottom: 5px;">
            Next
            <i class="glyphicon glyphicon-chevron-right"></i>
        </a>
    }
    <select onChange="window.location.href=this.value" class="form-control" style="width: auto;display:unset">
        <option>Select Count</option>
        <option value="?page=@(ViewBag.PageViewModel.PageNumber)&&pageSize=5">5</option>
        <option value="?page=@(ViewBag.PageViewModel.PageNumber)&&pageSize=10">10</option>
        <option value="?page=@(ViewBag.PageViewModel.PageNumber)&&pageSize=15">15</option>
    </select>
</div>




<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Count</th>
            <th scope="col">Price</th>
            <th scope="col">OldPrice</th>
            <th scope="col">Sku</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ProductModel product in ViewBag.Users)
        {
            <tr>
                <th scope="row">@product.Id</th>
                <td>@product.Name</td>
                <td>@product.Count</td>
                <td>@product.Price</td>
                <td>@product.OldPrice</td>
                <td>@product.Sku</td>
            </tr>
        }
    </tbody>
</table>
